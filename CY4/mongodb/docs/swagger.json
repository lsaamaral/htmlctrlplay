{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "API Documentation",
        "description": "This is the API documentation for our service."
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "paths": {
        "/books":{
            "post": {
                "summary": "Criar um novo livro",
                "description": "Adiciona um novo livro na biblioteca. O novo livro deve conter todos os parametros obrigatorios",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Dados do livro que sera adicionado",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "example": "A Divina Comédia"
                                },
                            "author": {
                                "type": "string",
                                "example": "Dante"
                            },
                            "year": {
                                "type": "integer",
                                "example": 1321
                            },
                            "genre": {
                                "type": "string",
                                "example": "poesia"
                            }
                        }
                    }
                }
            ],
            "responses": {
                "201": {
                    "description": "Livro adicionado com sucesso!"
                },
                "500": {
                    "description": "Erro ao adicionar livro"
                }
            }
            }
        },
        "/books/{id}":{
            "post": {
                "summary": "Criar um novo livro",
                "description": "Adiciona um novo livro na biblioteca digital. O novo livro deve conter todos os parâmetros obrigatórios",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Dados do livro que será adicionado",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "example": "A Divina Comédia"
                                },
                                "author": {
                                    "type": "string",
                                    "example": "Dante"
                                },
                                "year": {
                                    "type": "integer",
                                    "example": 1321
                                },
                                "genre": {
                                    "type": "string",
                                    "example": "poesia"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Livro adicionado com sucesso"
                    },
                    "500": {
                        "description": "Erro ao criar livro"
                    }
                }
            },
            "delete": {
                "summary": "Deleta um livro da biblioteca",
                "description": "Apaga um livro escolhido da biblioteca atravez  uma sequencia de letras e numeros que seram chamados de seu ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do livro que será atualizado",
                        "required": true,
                        "type": "string",
                        "example": "68b628788cf2ccd91071c38c"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "description": "ID par deletar um livro",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "ID": {
                                    "type": "string",
                                    "example": "67ha98qog0qn"
                                }
                            }   
                        } 
                    }
                ],
                "response": {
                    "201": {
                        "description":"Livro adicionado com sucesso!" 
                    },
                    "500":{
                        "description": "Erro ao adicionar livro"

                    }
                }
            }
        }
    }
}
